<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tariqeeesciencelab.blogapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeshBoard"
            android:label="@string/title_activity_desh_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SolveNewPost" />
        <activity android:name=".SolveAdminUpdate" />
        <activity android:name=".SolveAdminView" />
        <activity android:name=".SolveUserView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"

            />

        <activity android:name=".SolveUserList"
            android:theme="@style/AppTheme"
            ></activity>
    </application>

</manifest>